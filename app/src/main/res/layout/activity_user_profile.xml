<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">


    <androidx.cardview.widget.CardView

        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chloro1">

        </ImageView>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/imageView"
        android:fontFamily="@font/alegreya_sans_medium"
        android:paddingLeft="20dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="32dp">

    </TextView>

    <RelativeLayout
        android:id="@+id/RLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:gravity="center_vertical"
        android:paddingTop="40dp">

        <RelativeLayout
        android:id="@+id/RLayoutProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="EmailID"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/emailIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/email1"
            android:layout_alignParentRight="true"
            android:fontFamily="More Fonts..."
            android:paddingTop="12dp"
            android:text="EmailID"
            android:textColor="@color/black"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email1"
            android:paddingTop="22dp"
            android:text="Phone Number"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email1"
            android:layout_alignRight="@id/phone1"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingTop="22dp"
            android:text="Phone Number"
            android:textColor="@color/black"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneTextView"
            android:paddingTop="22dp"
            android:text="Password"
            android:textSize="22dp">

        </TextView>

        <TextView
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneTextView"
            android:layout_alignRight="@id/password1"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingTop="22dp"
            android:text="*********"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </RelativeLayout>


    <Button
        android:id="@+id/editPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RLayoutProfile"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/material_on_surface_stroke"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="14dp">


    </Button>

    <RelativeLayout
        android:id="@+id/RLayoutAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPasswordButton"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/addressHouseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="House Name"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/addressHouseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/addressHouseName"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="House Name"
            android:textColor="@color/black"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/addressArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressHouseName"
            android:paddingTop="22dp"
            android:text="Area/Street "
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/addressAreaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressHouseName"
            android:layout_alignRight="@id/addressArea"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingTop="22dp"
            android:text="Area"
            android:textColor="@color/black"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:id="@+id/addressCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressArea"
            android:paddingTop="22dp"
            android:text="City"
            android:textSize="22dp">

        </TextView>

        <TextView
            android:id="@+id/addressCityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressArea"
            android:layout_alignRight="@id/addressCity"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingTop="22dp"
            android:text="City"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>
        <TextView
            android:id="@+id/addressPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressCity"
            android:paddingTop="22dp"
            android:text="Pin"
            android:textSize="22dp">

        </TextView>

        <TextView
            android:id="@+id/addressPinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressCity"
            android:layout_alignRight="@id/addressPin"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingTop="22dp"
            android:text="PIN"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </RelativeLayout>
    </RelativeLayout>



    <TextView
        android:id="@+id/ProudlyMadeInIndia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alegreya_sans_medium"
        android:paddingTop="5dp"
        android:text="Proudly Made In India"
        android:textColor="@color/black"
        android:textSize="22dp">

    </TextView>

    <TextView
        android:id="@+id/Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ProudlyMadeInIndia"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alegreya_sans_medium"
        android:paddingTop="5dp"
        android:text="Version 1.10.2"
        android:textColor="@color/black"
        android:textSize="22dp">

    </TextView>

    <TextView
        android:id="@+id/ProfitTrader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Version"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alegreya_sans_medium"
        android:paddingTop="5dp"
        android:text="Chlorophyll"
        android:textColor="@color/black"
        android:textSize="22dp">

    </TextView>


    <androidx.cardview.widget.CardView

        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/ProfitTrader"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/imageProfile2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ch5">

        </ImageView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>